/* pages/search/search.wxss */

.search {
  min-height: 100vh;
  overflow: hidden;
  background-color: rgba(153, 153, 153, 0.2);
}

.wrap_input {
  position: fixed;
  top: 0;
  left: 0;
  padding: 25rpx 30rpx 0;
  width: 100%;
  height: 146rpx;
  background-color: #FFF;
  box-sizing: border-box;
}

.wrap_input .input_block {
  position: relative;
}

.wrap_input .input {
  padding: 15rpx 80rpx;
  height: 66rpx;
  background-color: #F1F1F2;
  line-height: 66rpx;
  border-radius: 10rpx;
  font-size: 34rpx;
}

.wrap_input .plh_style {
  font-size: 34rpx;
  color: rgba(176, 185, 194, 1);
}

.wrap_input .icon_search {
  position: absolute;
  left: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 38rpx;
}

.wrap_input .icon_close {
  position: absolute;
  right: 26rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
}

.search_result {
  margin-top: 146rpx;
}

.wrap_hot {
  margin-bottom: 24rpx;
  padding: 30rpx 30rpx 64rpx;
  background-color: #FFF;
}

.wrap_hot .num_host {
  height: 50rpx;
}

.wrap_hot .name {
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
}

.wrap_hot .info {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
}

.list_hots .item {
  margin: 32rpx 16rpx 0 0;
  float: left;
  padding: 8rpx 32rpx;
  background-color: #F8F8F8;
  border-radius: 2rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #1677FF;
}

.recently {
  background-color: #FFF;
}

.recently .title {
  padding: 40rpx 32rpx 32rpx;
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
}

