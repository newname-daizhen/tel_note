/* pages/user/user.wxss */

.user{
  min-height: 100vh;  
}
.user.gray{
  background-color: #F5F5F5;
}

.login_box{
  padding: 44rpx 0 96rpx;
  text-align: center;
  background-color: #FFF;
}
.avatar image{
  margin: 0 auto;
  width: 164rpx;
  border-radius: 50%;
}

.info_login_no{
  margin: 6rpx auto 0;
  padding: 16rpx 24rpx;
  width: 350rpx;
  color: #3377FF;
  background:rgba(159,188,254,.16);
  font-size: 28rpx;
  line-height: 40rpx;
  border-radius: 50rpx;
}

.info_login_is{
  margin-top: 32rpx;
  color: #999;
  font-size: 22rpx;
  text-align: center;
}
.info_login_is .username{
  margin-bottom: 8rpx;
  font-size:32rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
  line-height:45rpx;
}

.info_login_is .usersign{
  padding: 0 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.login_out{
  margin: 32rpx auto -60rpx;
  width:146rpx;
  height:56rpx;
  color: #4088FB;
  font-size: 24rpx;
  line-height:56rpx;
  background:rgba(235,241,255,1);
  border-radius:7rpx;
}

.btn_login{
  margin: 88rpx auto 0;
  width:298rpx;
  height:88rpx;
  line-height:88rpx;
  border-radius:6rpx;
  border:1px solid rgba(53,116,250,1);
}
.btn_login .btn{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:32rpx;
  color:rgba(53,116,250,1);
  background-color: #FFF;
}
.btn_login image{
  margin-right: 8rpx;
  width: 44rpx;
}

.list_func{
  font-size:30rpx;
  color:#5C5C5C;
  background-color: #FFF;
}
.list_func .item{
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding-right: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #DDDFE4;
}
.list_func .item:last-child{
  border-bottom: unset;
}

.list_func .item image{
  margin-right: 12rpx;
  width: 42rpx;
}